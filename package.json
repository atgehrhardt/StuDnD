{
  "name": "dnd-learning-companion",
  "version": "1.0.0",
  "description": "DnD 5e Learning Companion with LLM-based GM",
  "main": "main.js",
  "scripts": {
    "dev": "npm run build && concurrently \"rollup -c -w\" \"electron .\"",
    "build": "rollup -c",
    "start": "npm run build && electron .",
    "clean": "rimraf dist dist-electron",
    "prebuild": "npm run clean",
    "dist": "npm run clean && npm run build && electron-builder",
    "dist:mac": "npm run clean && npm run build && electron-builder --mac",
    "dist:win": "npm run clean && npm run build && electron-builder --win",
    "dist:linux": "npm run clean && npm run build && electron-builder --linux"
  },
  "build": {
    "appId": "com.dndlearning.companion",
    "productName": "DnD Learning Companion",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.games",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Game"
    }
  },
  "keywords": [
    "dnd",
    "electron",
    "svelte",
    "llm",
    "gemini"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.0",
    "electron-reload": "^2.0.0-alpha.1",
    "rimraf": "^5.0.1",
    "rollup": "^2.79.1",
    "rollup-plugin-css-only": "^4.5.2",
    "rollup-plugin-svelte": "^7.1.6",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^4.2.12"
  },
  "dependencies": {
    "@google/generative-ai": "^0.2.1",
    "electron-store": "^8.1.0",
    "node-machine-id": "^1.1.12"
  }
}
